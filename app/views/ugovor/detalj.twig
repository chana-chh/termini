					{{ csrf|raw }}
					<input type="hidden" id="idIzmenaDokumenta" name="idIzmenaDokumenta">
					<input type="hidden" id="idUgovorDokumenta" name="idUgovorDokumenta" value="{{ ugovor.id }}">
