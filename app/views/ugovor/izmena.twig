          <label for="dekoracija_opis">Dekoracija opis</label>
          <input type="text" class="form-control" name="dekoracija_opis" id="dekoracija_opis"
            value="{{ old.dekoracija_opis ? : ugovor.dekoracija_opis }}" autocomplete="off">
