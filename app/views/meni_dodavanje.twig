    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Gazirana voda Vrnjci 1l">Gazirana voda Vrnjci 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Coca Cola 1l">Coca Cola 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Fanta 1l">Fanta 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Pomorandža Takovo 1l">Pomorandža Takovo 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Breskva Takovo 1l">Breskva Takovo 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Jabuka Takovo 1l">Jabuka Takovo 1l</button>
    <button type="button" class="btn btn-dark btn-sm karta" 
    value="Domaća kafa">Domaća kafa</button>
    <button type="button" class="btn btn-danger btn-sm" id="cisti_karta"><i class="fas fa-eraser"></i></button>
  </div>
</div>
<div class="card border-dark mb-3">
  <div class="card-header text-primary">* Ako navodite više stavki u nekoj od kategorija razdvojite ih tačkom i zarezom i prebacite u novi red tasterom enter.</div>
  <div class="card-body text-dark mobilni">
    <form action="{{ path_for('meni.dodavanje.post') }}" method="POST" class="needs-validation" novalidate>
      {{ csrf | raw }}

      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="naziv">Naziv</label>
          <input type="text" class="form-control{{ errors.naziv[0] ? ' is-invalid' : '' }}" value="{{ old.naziv ? : '' }}" name="naziv" id="naziv" aria-describedby="Naziv sale" autocomplete="off" required>
          <div class="valid-feedback">Odgovarajući podatak</div>
          <div class="invalid-feedback">
            {{ errors.naziv[0] ? : 'Obavezno polje' }}
          </div>
        </div>
        <div class="form-group col-md-3">
          <label for="cena">Cena</label>
          <input type="number" class="form-control{{ errors.cena[0] ? ' is-invalid' : '' }}" value="{{ old.cena ? : '' }}" name="cena" id="cena" value="{{ old.cena ? : 0 }}" min="0" step="1" autocomplete="off" required>
          <div class="valid-feedback">Odgovarajući podatak</div>
          <div class="invalid-feedback">
            {{ errors.cena[0] ? : 'Obavezno polje' }}
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="napomena">Napomena</label>
          <textarea class="form-control" name="napomena" id="napomena" rows="3"></textarea>
        </div>
      </div>
      <hr>
      <div class="form-row">
        <div class="col-md-4">
          <label for="hleb"><i class="fas fa-bread-slice fa-lg text-warning"></i>&emsp;<strong>Hleb</strong></label>
          <textarea class="form-control" name="hleb" id="hleb" rows="3"></textarea>
        </div>
        <div class="col-md-4">
          <label for="hladno_predjelo"><i class="fas fa-bacon fa-lg text-warning"></i>&emsp;<strong>Hladno
              predjelo</strong></label>
          <textarea class="form-control" name="hladno_predjelo" id="hladno_predjelo" rows="3"></textarea>
        </div>
        <div class="col-md-4">
          <label for="sirevi"><i class="fas fa-cheese fa-lg text-warning"></i>&emsp;<strong>Sirevi</strong></label>
          <textarea class="form-control" name="sirevi" id="sirevi" rows="3"></textarea>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-4 mt-2">
          <label for="corba"><i class="fas fa-utensil-spoon fa-lg text-warning"></i>&emsp;<strong>Čorba</strong></label>
          <textarea class="form-control" name="corba" id="corba" rows="3"></textarea>
        </div>
        <div class="col-md-4 mt-2">
          <label for="glavno_jelo"><i class="fas fa-utensils fa-lg text-warning"></i>&emsp;<strong>Glavno jelo</strong></label>
          <textarea class="form-control" name="glavno_jelo" id="glavno_jelo" rows="3"></textarea>
        </div>
        <div class="col-md-4 mt-2">
          <label for="meso"><i class="fas fa-drumstick-bite fa-lg text-warning"></i>&emsp;<strong>Meso</strong></label>
          <textarea class="form-control" name="meso" id="meso" rows="3"></textarea>
        </div>
      </div>
      <div class="form-row justify-content-between mt-2">
        <div class="col-md-4">
          <label for="karta_pica"><i class="fas fa-wine-glass fa-lg text-warning"></i>&emsp;<strong>Karta pića</strong></label>
          <textarea class="form-control" name="karta_pica" id="karta_pica" rows="3"></textarea>
        </div>
        <div class="col-md-8 mt-2 text-right align-self-end">
          <button type="submit" class="btn btn-primary" title="Dodaj novi meni"><i class="fas fa-plus-square"></i> &emsp;Dodaj</button>
          <a href="{{ path_for('meni') }}" class="btn btn-secondary"><i class="fas fa-ban"></i> &emsp;Otkaži</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock naslov %}
{% block skripta %}
  <script type="text/javascript">
  $(document).ready(function () {
    (function() {
            "use strict";
            window.addEventListener(
              "load",
              function() {
                var forms = document.getElementsByClassName("needs-validation");
                var validation = Array.prototype.filter.call(forms, function(form) {
                  form.addEventListener(
                    "submit",
                    function(event) {
                      if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                      }
                      form.classList.add("was-validated");
                    },
                    false
                  );
                });
              },
              false
            );
          })();

          $('.prikazi').click(function () {
        $('.pretraga_div').toggle();
    });

  $(".hladno").click(function(){
    var box = $("#hladno_predjelo");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_hladno').click(function() {
    $("#hladno_predjelo").val("");
    $(".hladno").prop('disabled', false);
  });

  $(".hleb").click(function(){
    var box = $("#hleb");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_hleb').click(function() {
    $("#hleb").val("");
    $(".hleb").prop('disabled', false);
  });

  $(".sir").click(function(){
    var box = $("#sirevi");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_sir').click(function() {
    $("#sirevi").val("");
    $(".sir").prop('disabled', false);
  });

  $(".corba").click(function(){
    var box = $("#corba");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_corba').click(function() {
    $("#corba").val("");
    $(".corba").prop('disabled', false);
  });

  $(".glavno").click(function(){
    var box = $("#glavno_jelo");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_glavno').click(function() {
    $("#glavno_jelo").val("");
    $(".glavno").prop('disabled', false);
  });

  $(".meso").click(function(){
    var box = $("#meso");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_meso').click(function() {
    $("#meso").val("");
    $(".meso").prop('disabled', false);
  });

  $(".karta").click(function(){
    var box = $("#karta_pica");
    box.val(box.val() + $(this).val() + ";" + "\n");
    $(this).prop('disabled', true);
  });

  $('#cisti_karta').click(function() {
    $("#karta_pica").val("");
    $(".karta").prop('disabled', false);
  });

  });
  </script>
